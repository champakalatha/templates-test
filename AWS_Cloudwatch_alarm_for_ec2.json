{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The template will configure cloud-watch alarms ",
  "Resources": {
    "CPUAlarm": {
      "Type": "AWS::CloudWatch::Alarm",
      "Condition" : "CPUUtilizationAlarm",
      "Properties": {
        "AlarmDescription": "CPU alarm for my instance",
        "MetricName": "CPUUtilization",
        "Namespace": "AWS/EC2",
        "Statistic": "Average",
        "Period": "60",
        "EvaluationPeriods": "3",
        "Threshold": "90",
        "ComparisonOperator": "GreaterThanThreshold",
        "Dimensions": [
          {
            "Name": "InstanceId",
            "Value": ""
          }
        ]
      }
    }
  }
}
